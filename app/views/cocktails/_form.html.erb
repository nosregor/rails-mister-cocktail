<form>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Ex: Mojito" %>
  </div>

  <div class="form-group">
    <%= f.label :picture %><br>
    <%= f.file_field :picture, class: "form-control", placeholder: "Upload a picture" %>
  </div>

  <div class="form-group">
    <br>
    <%= f.hidden_field :picture_cache %>
  </div>


  <%= f.submit class:'btn btn-default' %>
</form>
<% end %>




